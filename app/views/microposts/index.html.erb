<% render 'pages/stats' if user_signed_in? %>

<% if signed_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section>
        <%= render 'user_info' %>
      </section>
      <!--
      <section>
        <%#= render 'micropost_form' %>
      </section>
      -->
      <section>
        <%= render 'users/search' %>
      </section>

      <% if @eavesdrop_items.any? %>
        <div class="good-border">
          <%= render 'eavesdrop_list' %>
        </div>
      <% else %>
        <div class="good-border">
          <section>
            <h1>You are not eavesdropping on any conversations. Check out a few recommendations below...</h1> 
          </section>
        </div>  
      <% end %>

      <p></p>
      <% if @eavesdrop_recommend_items.any? %>
        <div class="good-border">
          <%= render 'eavesdrop_recommend_list' %>
        </div>
      <% else %>
        <div class="good-border">
          <section>
            <h1>Currently, there are no recommendations for you to eavesdrop</h1> 
          </section>
        </div>  
      <% end %>

    </aside>
  



    <div class="col-md-1"></div>
      <div class="col-md-8 good-border light-gray-background">
        <% if @feed_items.any? %>  
          <%= render 'feed' %>
        <% else %>
      <aside>
        <section>
          <h1>You current have no conversations but here are a few things you can do...</h1><p></p>
          <ul>
            <li><h5>You can search for other people by their interests or location to talk to <em>(to the left)</em></h5></li>
            <li><h5>You can eavesdrop on recommended conversations <em>(to the left)</em></h5></li>
            <li><h5>You can look up other people to talk to or conversations to eavesdrop <em>(to the top)</em></h5></li>
          </ul>
        </section>
      </aside>
        <% end %>
      </div>
    </div>
  <div class="col-md-3">
    <%#= render 'communicate_form' %>
  </div>

<% else %>
