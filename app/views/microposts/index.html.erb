<% if false %>
  <% if user_signed_in? %>
    <% provide(:title, @user.name) %>
    <div class="col-md-8">
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
      <% end %>
    </div>
    <% end %>


  <h1>Listing microposts</h1>

  <table>
    <thead>
      <tr>
        <th>Content</th>
        <th>User</th>
        <th>Initiator</th>
        <th>Responder</th>
        <th>Topic</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <td><%= micropost.content %></td>
          <td><%= micropost.user_id %></td>
          <td><%= micropost.initiator %></td>
          <td><%= micropost.responder %></td>
          <td><%= micropost.topic %></td>
          <td><%= link_to 'Show', micropost %></td>
          <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
          <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Micropost', new_micropost_path %>
  <% end %>
<% end %>